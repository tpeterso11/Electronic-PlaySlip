<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/sevencard_cash_bg">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/find_logo_v1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/clubs_ace"
        android:id="@+id/user_card"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/clubs_king"
        android:id="@+id/user_card2"
        android:layout_below="@id/user_card"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/clubs_queen"
        android:id="@+id/user_card3"
        android:layout_below="@id/user_card"
        android:layout_centerVertical="true"
        android:layout_marginLeft="85dp"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/clubs_jack"
        android:id="@+id/user_card4"
        android:layout_below="@id/user_card2"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/win_card1"
        android:layout_marginRight="50dp">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/clubs_ace"
        android:id="@+id/win1_back"
        android:layout_centerVertical="true" />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/gp_card_front"
        android:id="@+id/win1"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/win_card1"
        android:id="@+id/win_card2"
        android:layout_marginRight="80dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/clubs_jack"
            android:id="@+id/win2_back"
            android:layout_centerVertical="true" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/gp_card_front"
            android:id="@+id/win2"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/win_card3"
        android:layout_below="@id/win_card1"
        android:layout_marginRight="20dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/clubs_king"
            android:id="@+id/win3_back"
            android:layout_centerVertical="true" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/gp_card_front"
            android:id="@+id/win3"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/win_card4"
        android:layout_below="@id/win_card2"
        android:layout_marginRight="50dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/clubs_ace"
            android:id="@+id/win4_back"
            android:layout_centerVertical="true" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/gp_card_front"
            android:id="@+id/win4"/>
    </RelativeLayout>

</RelativeLayout>