<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/app"
        android:orientation="vertical"
        android:background="#563a82"
        android:weightSum="3"
        android:elevation="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight=".2"
                android:background="#132847">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFF"
                            android:layout_margin="10dp"
                            android:id="@+id/final_shop_tag"
                            android:text="Shopping Cart"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textColor="#FFF"
                            android:layout_weight="1"
                            android:id="@+id/cost_tag"
                            android:layout_alignParentRight="true"
                            android:text="Total: $50"/>
                        <RelativeLayout
                            android:layout_width="70dp"
                            android:layout_height="2dp"
                            android:background="@color/tomato"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@id/cost_tag"
                            android:layout_toRightOf="@id/final_shop_tag"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1.4"
            android:background="#132847">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/no_cart"
                android:textSize="18sp"
                android:visibility="gone"
                android:text="Cart Empty! Go Play Some Games!"/>
            <GridView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/grid"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:gravity="center"
            android:background="#132847">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/generate_text"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Be prepared to pay at a participating retailer before continuing."/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_gold"
                android:id="@+id/generate"
                android:layout_below="@id/generate_text"
                android:text="Click Here - Pay Clerk"
                android:textColor="#FFF"
                android:layout_margin="10dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_transparent"
                android:id="@+id/map"
                android:layout_below="@id/generate"
                android:text="Find Nearest Retailer"
                android:textColor="#FFF"
                android:layout_margin="10dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>