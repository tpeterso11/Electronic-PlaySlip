<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/app"
            android:background="@color/app_blue">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/main_view">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:elevation="20dp"
                    android:id="@+id/cat_header">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_tickets"
                        android:id="@+id/category_title"
                        android:textColor="#FFF"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="22sp"/>
                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="01"
                        android:id="@+id/category_count"
                        android:alpha=".05"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:gravity="right"
                        android:textColor="#FFF"
                        android:layout_marginTop="-10dp"
                        android:layout_marginBottom="-30dp"
                        android:textSize="80sp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="@color/app_blue"
                    android:id="@+id/switcher"
                    android:elevation="20dp"
                    android:layout_below="@id/cat_header">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/app_blue"
                        android:id="@+id/open_layout"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Shopping List"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:id="@+id/open"
                            android:textColor="@color/white"
                            android:layout_centerInParent="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/open_tag"
                            android:text="(0)"
                            android:visibility="gone"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:layout_toRightOf="@id/open"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_right_selected"
                        android:id="@+id/purchased_layout"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Purchased Tickets"
                            android:id="@+id/purchased"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/app_blue"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/switcher"
                    android:background="#FFF">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:id="@+id/cat_desc">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:id="@+id/cat_desc_text"
                            android:layout_marginLeft="10dp"
                            android:textColor="#000"
                            android:gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/open_tickets"/>

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/loading"
                        android:background="#CC000000"
                        android:visibility="invisible"
                        android:elevation="60dp">
                        <ProgressBar
                            android:id="@+id/progressBar1"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:visibility="invisible"
                            android:layout_centerInParent="true" />
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/playport_icon"
                            android:id="@+id/loading_logo"
                            android:layout_centerInParent="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFF"
                            android:text="Loading Tickets..."
                            android:textSize="24sp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/loading_logo"
                            android:layout_centerInParent="true"
                            android:id="@+id/welcome_text"
                            android:visibility="visible"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFF"
                            android:text="User"
                            android:textSize="24sp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/welcome_text"
                            android:layout_marginTop="10dp"
                            android:id="@+id/user_text"
                            android:visibility="invisible"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:id="@+id/mytickets_instructions"
                        android:visibility="visible"
                        android:layout_below="@id/cat_desc">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="-5dp"
                            android:orientation="horizontal"
                            android:id="@+id/sort"
                            android:weightSum="4">
                            <RelativeLayout
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:id="@+id/ready"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:background="@drawable/border_right_tickets">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:weightSum="2">
                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_weight="1"
                                        android:src="@drawable/ready_to_view"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textColor="#000"
                                        android:gravity="center"
                                        android:id="@+id/ready_tag"
                                        android:text="Ready"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:id="@+id/all_1"
                                        android:textColor="#000"
                                        android:visibility="gone"
                                        android:text="All Tickets"/>

                                </LinearLayout>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:id="@+id/pending_layout"
                                android:background="@drawable/border_right_tickets">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:weightSum="2">
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_weight="1"
                                        android:layout_marginTop="2dp"
                                        android:src="@drawable/pending_black"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:id="@+id/pending_tag"
                                        android:textColor="#000"
                                        android:text="Pending"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:textColor="#000"
                                        android:id="@+id/all_2"
                                        android:visibility="gone"
                                        android:text="All Tickets"/>
                                </LinearLayout>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:id="@+id/winning_layout"
                                android:background="@drawable/border_right_tickets">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:weightSum="2">
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_weight="1"
                                        android:layout_marginTop="2dp"
                                        android:src="@drawable/winning_ticket_black"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:id="@+id/winning_tag2"
                                        android:textColor="#000"
                                        android:text="Winning"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:textColor="#000"
                                        android:id="@+id/all_3"
                                        android:visibility="gone"
                                        android:text="All Tickets"/>
                                </LinearLayout>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/redeemed_layout"
                                android:padding="5dp"
                                android:background="#FFF">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:weightSum="2">
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_weight="1"
                                        android:layout_marginTop="2dp"
                                        android:src="@drawable/redeemed_black"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2"
                                        android:gravity="center"
                                        android:id="@+id/redeemed_tag"
                                        android:textSize="12sp"
                                        android:textColor="#000"
                                        android:text="Redeemed"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:textColor="#000"
                                        android:visibility="gone"
                                        android:id="@+id/all_4"
                                        android:text="All Tickets"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/sort"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:id="@+id/divider"
                            android:weightSum="3">
                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="2dp"
                            android:background="#696969"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sort"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="#696969"/>
                            <RelativeLayout
                                android:layout_width="100dp"
                                android:layout_height="2dp"
                                android:background="#696969"
                                android:layout_weight="1"
                                android:layout_marginRight="10dp"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:id="@+id/shoppinglist_instructions"
                        android:visibility="gone"
                        android:layout_below="@id/cat_desc">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:textStyle="italic"
                            android:text="These tickets have not been purchased yet. Please visit your participating retailer, select your ticket and display your confirmation number to the retailer for purchase."/>
                    </RelativeLayout>
                <ExpandableListView
                    android:id="@+id/tickets"
                    android:visibility="visible"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_below="@id/mytickets_instructions"
                    android:groupIndicator="@null"
                    android:divider="#000"
                    android:dividerHeight="2dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="@string/no_tickets_my"
                        android:layout_below="@id/cat_desc"
                        android:gravity="center"
                        android:id="@+id/no_tickets"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="100dp"
                        android:textColor="#000"
                        android:layout_marginRight="10dp"/>
                </RelativeLayout>
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/list"
                    app:backgroundTint="@color/app_green"
                    android:transitionName="reveal"
                    android:visibility="gone"/>
            </RelativeLayout>
        </RelativeLayout>
</RelativeLayout>