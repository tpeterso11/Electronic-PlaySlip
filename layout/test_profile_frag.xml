<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/app"
        android:orientation="vertical"
        android:background="#132847"
        android:weightSum="3"
        android:elevation="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_header">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textColor="#FFF"
                android:id="@+id/profile_title"
                android:layout_margin="10dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/silhouette_gray"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:id="@+id/settings">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/settings_ico"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_below="@id/profile_image"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/email_tag"
                        android:text="E-Mail:"
                        android:visibility="visible"
                        android:textStyle="bold"
                        android:textColor="#FFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/menu_email"
                        android:text="test@geocities.com"
                        android:layout_centerHorizontal="true"
                        android:visibility="visible"
                        android:textColor="#FFF"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/phone_tag"
                        android:text="Mobile:"
                        android:visibility="visible"
                        android:textStyle="bold"
                        android:textColor="#FFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/menu_email"
                        android:id="@+id/menu_phone"
                        android:text="816-333-3333"
                        android:layout_centerHorizontal="true"
                        android:visibility="visible"
                        android:textColor="#FFF"
                        android:textStyle="italic"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/profile_main">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFF"
                            android:layout_margin="10dp"
                            android:id="@+id/fave_games_tag"
                            android:text="Favorite Games"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/tomato"
                            android:layout_centerVertical="true"
                            android:id="@+id/divider1"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@id/fave_games_tag"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <android.support.v17.leanback.widget.HorizontalGridView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:clipToPadding="false"
                            android:layout_marginLeft="5dp"
                            android:horizontalSpacing="16dp"
                            android:verticalSpacing="16dp"
                            android:id="@+id/fave_grid" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No Favorites Selected"
                            android:textColor="#FFF"
                            android:textStyle="italic"
                            android:id="@+id/no_faves"
                            android:visibility="gone"
                            android:gravity="center"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFF"
                            android:layout_margin="10dp"
                            android:id="@+id/fave_locales"
                            android:text="Saved Numbers"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/tomato"
                            android:id="@+id/divider2"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@id/fave_locales"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <android.support.v17.leanback.widget.HorizontalGridView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:clipToPadding="false"
                            android:layout_marginLeft="5dp"
                            android:horizontalSpacing="16dp"
                            android:verticalSpacing="16dp"
                            android:id="@+id/save_grid" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No Numbers Saved"
                            android:textColor="#FFF"
                            android:textStyle="italic"
                            android:id="@+id/no_saved"
                            android:visibility="gone"
                            android:gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/profile_edit">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:layout_margin="10dp"
                        android:id="@+id/edit_tag"
                        android:text="Edit Profile"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:id="@+id/divider3"
                        android:background="@color/tomato"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/edit_tag"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/custom_edit"
                        android:id="@+id/edit_email"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:hint="test.email@test.com"
                        android:paddingLeft="10dp"
                        android:inputType="textEmailAddress"
                        android:textColor="#FFF"
                        android:textColorHint="#FFF"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/custom_edit"
                        android:id="@+id/edit_phone"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:hint="555-555-5555"
                        android:inputType="phone"
                        android:paddingLeft="10dp"
                        android:textColor="#FFF"
                        android:textColorHint="#FFF"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/custom_edit"
                        android:id="@+id/edit_pass"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:hint="*******"
                        android:paddingLeft="10dp"
                        android:inputType="textPassword"
                        android:textColor="#FFF"
                        android:textColorHint="#FFF"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_button_red"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/save_button"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="#FFF"
                            android:id="@+id/save_text"
                            android:text="Save Changes"
                            android:gravity="center"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:layout_margin="10dp"
                        android:id="@+id/setting_edit"
                        android:text="My Settings"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/tomato"
                        android:id="@+id/divider4"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/setting_edit"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="2"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="#FFF"
                            android:layout_margin="10dp"
                            android:id="@+id/fave_retailer"
                            android:layout_weight="1"
                            android:text="My Favorite Retailer"/>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:id="@+id/retailer_select"
                            android:layout_marginRight="10dp"
                            android:background="@color/tomato">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="#FFF"
                                android:gravity="center"
                                android:text="Select"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFF"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="30dp"
                            android:id="@+id/language_edit"
                            android:text="Language Settings"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/tomato"
                            android:layout_marginLeft="25dp"
                            android:id="@+id/divider5"
                            android:layout_marginTop="40dp"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@id/language_edit"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:id="@+id/stepper"
                        android:background="@drawable/rounded_layout_red">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:background="#08111f"
                            android:layout_weight="1"
                            android:id="@+id/spanish"
                            android:textColor="#FFF"
                            android:text="Spanish"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:background="@color/tomato"
                            android:layout_weight="1"
                            android:id="@+id/english"
                            android:textColor="#FFF"
                            android:layout_margin="2dp"
                            android:text="English"
                            android:gravity="center"
                            android:textSize="18sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:paddingBottom="50dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/push"
                            android:text="Receive Push Notifications"
                            android:layout_marginLeft="10dp"
                            android:textColor="#FFF"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:id="@+id/stepper_note"
                            android:background="@drawable/rounded_layout_red">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="#08111f"
                                android:layout_weight="1"
                                android:id="@+id/yes_tag"
                                android:textColor="#FFF"
                                android:text="Yes"
                                android:layout_margin="2dp"
                                android:gravity="center"
                                android:textSize="18sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="@color/tomato"
                                android:layout_weight="1"
                                android:id="@+id/no_tag"
                                android:textColor="#FFF"
                                android:layout_margin="2dp"
                                android:text="No"
                                android:gravity="center"
                                android:textSize="18sp"/>
                        </LinearLayout>

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:elevation="60dp"
                            android:padding="20dp"
                            android:layout_marginRight="-10dp"
                            android:id="@+id/trash"
                            android:layout_marginBottom="50dp"
                            android:visibility="gone"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/edit_main_extra"
                            android:visibility="visible">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:orientation="vertical">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#FFF"
                                        android:layout_margin="10dp"
                                        android:id="@+id/fave_games_tag_edit"
                                        android:text="Edit Favorite Games"/>
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="2dp"
                                        android:background="@color/tomato"
                                        android:layout_centerVertical="true"
                                        android:id="@+id/divider1_edit"
                                        android:layout_marginLeft="40dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_toRightOf="@id/fave_games_tag_edit"/>
                                </RelativeLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <android.support.v17.leanback.widget.HorizontalGridView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:clipToPadding="false"
                                        android:layout_marginLeft="5dp"
                                        android:horizontalSpacing="16dp"
                                        android:verticalSpacing="16dp"
                                        android:id="@+id/fave_grid_edit" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="No Favorites Selected"
                                        android:textColor="#FFF"
                                        android:textStyle="italic"
                                        android:id="@+id/no_faves_edit"
                                        android:visibility="gone"
                                        android:gravity="center"/>

                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:visibility="visible">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#FFF"
                                        android:layout_margin="10dp"
                                        android:id="@+id/fave_locales_edit"
                                        android:text="Edit Saved Numbers"/>
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="2dp"
                                        android:background="@color/tomato"
                                        android:id="@+id/divider2_edit"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="25dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_toRightOf="@id/fave_locales_edit"/>
                                </RelativeLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <android.support.v17.leanback.widget.HorizontalGridView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:clipToPadding="false"
                                        android:layout_marginLeft="5dp"
                                        android:horizontalSpacing="16dp"
                                        android:verticalSpacing="16dp"
                                        android:id="@+id/save_grid_edit" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="No Numbers Saved"
                                        android:textColor="#FFF"
                                        android:textStyle="italic"
                                        android:id="@+id/no_saved_edit"
                                        android:visibility="gone"
                                        android:gravity="center"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>