<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_back"
    android:background="@color/app_purple">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/app"
            android:orientation="vertical"
            android:elevation="0dp">
            <ViewFlipper
                android:id="@+id/viewFlipper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingBottom="2dp"
                android:layout_marginTop="1dp">
            </ViewFlipper>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/tomato"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@color/new_blue">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:layout_margin="10dp"
                                android:id="@+id/added_text"
                                android:textSize="18sp"
                                android:text="Recently Added"/>
                        </RelativeLayout>
                        <android.support.v17.leanback.widget.HorizontalGridView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:clipToPadding="false"
                            android:horizontalSpacing="16dp"
                            android:layout_marginLeft="10dp"
                            android:verticalSpacing="16dp"
                            android:id="@+id/newest_grid" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@color/new_blue">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:layout_margin="10dp"
                                android:textSize="18sp"
                                android:id="@+id/prize_text"
                                android:text="Highest Prizes"/>
                        </RelativeLayout>
                        <android.support.v17.leanback.widget.HorizontalGridView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:clipToPadding="false"
                            android:layout_marginLeft="10dp"
                            android:horizontalSpacing="16dp"
                            android:verticalSpacing="16dp"
                            android:id="@+id/prize_grid" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@color/new_blue">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:layout_margin="10dp"
                                android:textSize="18sp"
                                android:id="@+id/odds_text"
                                android:text="Best Odds"/>
                        </RelativeLayout>
                        <android.support.v17.leanback.widget.HorizontalGridView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:clipToPadding="false"
                            android:layout_marginLeft="10dp"
                            android:horizontalSpacing="16dp"
                            android:verticalSpacing="16dp"
                            android:id="@+id/odds_grid" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:id="@+id/retailer_layout"
                        android:background="@color/new_blue">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:id="@+id/retailer_text"
                                android:textSize="18sp"
                                android:layout_margin="10dp"
                                android:text="Favorite Retailer Games"/>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:id="@+id/favorites_layout"
                        android:background="@color/new_blue">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:id="@+id/favorite_text"
                                android:textSize="18sp"
                                android:layout_margin="10dp"
                                android:text="Favorites"/>
                        </RelativeLayout>
                        <android.support.v17.leanback.widget.HorizontalGridView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:clipToPadding="false"
                            android:layout_marginLeft="10dp"
                            android:horizontalSpacing="16dp"
                            android:verticalSpacing="16dp"
                            android:id="@+id/fave_grid" />
                    </LinearLayout>
                </LinearLayout>
        </LinearLayout>
</LinearLayout>