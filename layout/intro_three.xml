<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/playport_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-50dp"
        android:layout_marginRight="-20dp"
        android:alpha=".1"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/asset3"
        android:layout_centerInParent="true"
        android:src="@drawable/asset5"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/asset3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/header"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Pay and Win!"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:layout_below="@id/header"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/two_tag"
        android:gravity="center"
        android:text="Skip the wait! Play at home, pay and pick-up later at participating retailers."/>
</RelativeLayout>