<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            android:orientation="horizontal"
            android:background="#132847"
            android:visibility="visible"
            android:id="@+id/front"
            android:layout_width="match_parent"
            android:layout_height="80dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:gravity="center"
                    android:weightSum="4">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:id="@+id/icon"
                        android:src="@drawable/saved_orders"/>
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@color/app_purple"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:id="@+id/count"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="2X"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/position"
                        android:textColor="#FFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:text="Order #"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/added_date"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/new_green"
                        android:text="Added 12/12/17"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cost"
                        android:textColor="#FFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:text="Total Cost"/>
                </LinearLayout>
                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="40dp"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:id="@+id/open"
                       android:background="@drawable/rounded_layout_purp">
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textColor="#FFF"
                           android:gravity="center"
                           android:text="Open"/>
                   </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e66e3b99"
                android:id="@+id/check"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selected"
                    android:textColor="#FFF"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/check_text"
                    android:visibility="gone"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e930b77e"
                android:id="@+id/added"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ticket Added"
                    android:textColor="#FFF"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/added_text"
                    android:visibility="gone"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e9fc5266"
                android:id="@+id/deleted"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ticket Removed"
                    android:textColor="#FFF"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/trash_text"
                    android:visibility="gone"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <!--What you want to show in SurfaceView-->
        </RelativeLayout>
</LinearLayout>