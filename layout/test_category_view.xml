<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/app"
            android:background="#256D1B">
            <android.support.v7.widget.Toolbar
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/app_bar"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:background="#256D1B"
                android:layout_height="wrap_content"
                app:theme="@style/CustomActionBar">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:layout_alignParentRight="true">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="-10dp"
                            android:layout_marginStart="-10dp"
                            android:padding="10dp"
                            android:id="@+id/search_icon"
                            android:visibility="gone"
                            android:src="@drawable/search_white"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="#FFF"
                        android:id="@+id/cart_number"
                        android:textStyle="bold"
                        android:visibility="gone"/>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/main_view"
                android:layout_below="@id/app_bar">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="1"
                    android:id="@+id/cat_header">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category Name"
                    android:id="@+id/category_title"
                    android:textColor="#FFF"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="22sp"/>
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="01"
                    android:id="@+id/category_count"
                    android:alpha=".05"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="right"
                    android:textColor="#FFF"
                    android:layout_marginTop="-10dp"
                    android:layout_marginBottom="-30dp"
                    android:textSize="80sp"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/icon_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFF"
                    android:paddingTop="10dp"
                    android:clipToPadding="false"
                    android:layout_marginTop="-5dp"
                    android:layout_below="@id/cat_header"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/criteria"
                    android:text="@string/criteria"
                    android:layout_below="@id/cat_header"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:visibility="gone"/>
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/list"
                    app:backgroundTint="@color/app_green"
                    android:transitionName="reveal"
                    android:visibility="gone"/>
            </RelativeLayout>
            </RelativeLayout>
    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>