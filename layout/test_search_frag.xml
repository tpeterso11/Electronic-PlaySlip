<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/app"
        android:orientation="vertical"
        android:background="#132847"
        android:elevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="4"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/stepper"
            android:background="@drawable/rounded_layout_red">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#08111f"
                android:layout_weight="2"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:singleLine="true"
                android:layout_marginLeft="2dp"
                android:id="@+id/search_field"
                android:textColor="#FFF"
                android:hint="Type Search Term"
                android:textColorHint="#e6FFFFFF"
                android:paddingLeft="10dp"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/plus"
                android:id="@+id/plus"
                android:text="Search"
                android:gravity="center"
                android:textColor="#FFF"
                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/filter_layout"
            android:background="#132847"
            android:gravity="center_vertical"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1.7"
                android:id="@+id/filter_button"
                android:text="Filter Results"
                android:textSize="18sp"
                android:textColor="#FFF"
                android:paddingLeft="20dp"
                android:gravity="left|center_vertical"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:src="@drawable/down_chevron_white"
                android:id="@+id/down"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight=".3"
                android:id="@+id/close_filters"
                android:visibility="gone"
                android:src="@drawable/ic_clear_white_24dp"/>
        </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/main_search"
                    android:background="#132847">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:textColor="#FFF"
                                android:id="@+id/search_tag"
                                android:paddingLeft="20dp"
                                android:paddingTop="5dp"
                                android:background="#101c2e"
                                android:text="Search Results"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <com.shoutz.toussaintpeterson.electronicpayslip.CustomExpandableListView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/grid"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:textColor="#FFF"
                                android:gravity="center"
                                android:visibility="gone"
                                android:id="@+id/criteria"
                                android:text="No Games Match Your Criteria!"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/filters"
                    android:visibility="invisible"
                    android:background="#132847"
                    android:layout_gravity="start">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/clear_filter"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_layout_red">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Clear Filters"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_centerInParent="true"
                                android:textColor="#FFF"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:id="@+id/search_filter"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_layout_green">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Search"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_centerInParent="true"
                                android:textColor="#FFF"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <ExpandableListView
                        android:id="@+id/numbers"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:groupIndicator="@null"
                        android:divider="#000"
                        android:dividerHeight="2dp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
            </RelativeLayout>
    </LinearLayout>
</LinearLayout>