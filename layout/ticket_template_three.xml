<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/main_four"
    android:layout_height="match_parent"
    android:background="@color/new_blue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/ticket_back3"
        android:visibility="invisible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/app_icon"
                android:layout_marginLeft="-50dp"
                android:layout_marginTop="-50dp"
                android:alpha=".4"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_360_ticket"
                android:layout_marginRight="10dp"
                android:id="@+id/flip_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flip Ticket"
                android:layout_below="@id/flip_back"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="12sp"
                android:layout_marginTop="-20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="18sp"
                android:gravity="center"
                android:text="@string/ticket_instructions"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/sample_barcode_long"
                android:scaleType="center"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ticket_front3"
        android:visibility="invisible"
        android:background="@color/app_blue"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dynamic_back"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:visibility="visible"
                android:id="@+id/logo3"
                android:layout_alignParentTop="true"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/price"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_360_ticket"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:id="@+id/flip"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flip Ticket"
                android:layout_below="@id/flip"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:layout_marginTop="-20dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/instruc"
                android:visibility="visible"
                android:layout_marginTop="-30dp"
                android:layout_below="@id/logo3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_below="@id/instruc"
                android:layout_marginTop="-20dp"
                android:id="@+id/your_numbers">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/your"
                    android:src="@drawable/last4_your_en"
                    android:layout_weight="2"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/your_1"
                    android:visibility="visible"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/your_2"
                    android:visibility="visible"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/your_3"
                    android:visibility="visible"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/your_4"
                    android:visibility="visible"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_below="@id/your_numbers"
                android:layout_marginTop="-10dp"
                android:id="@+id/arrows">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/last4_your_en"
                    android:visibility="invisible"
                    android:layout_weight="2"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/last4_arrown"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/last4_arrown"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/last4_arrown"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/last4_arrown"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_below="@id/arrows"
                android:id="@+id/draw_numbers">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/last4_draw_en"
                    android:visibility="visible"
                    android:id="@+id/draw"
                    android:layout_weight="2"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/pending"
                    android:scaleType="centerCrop"
                    android:id="@+id/pending"
                    android:layout_weight="4"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/draw_1"
                    android:visibility="gone"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/draw_2"
                    android:visibility="gone"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/draw_3"
                    android:visibility="gone"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/draw_4"
                    android:visibility="gone"
                    android:layout_weight="1"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sample_barcode_long"
                android:layout_below="@id/draw_numbers"
                android:id="@+id/sample_barcode"
                android:visibility="gone"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/prize"
                android:scaleType="centerCrop"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>