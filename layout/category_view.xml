<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/app"
            android:background="@color/app_blue">
            <android.support.v7.widget.Toolbar
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:background="@color/app_blue"
                android:visibility="gone"
                android:layout_height="wrap_content"
                app:theme="@style/CustomActionBar">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:layout_alignParentRight="true">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="-10dp"
                            android:layout_marginStart="-10dp"
                            android:padding="10dp"
                            android:id="@+id/search_icon"
                            android:visibility="gone"
                            android:src="@drawable/search_white"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="#FFF"
                        android:id="@+id/cart_number"
                        android:textStyle="bold"
                        android:visibility="gone"/>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/main_view"
                android:layout_below="@id/app_bar">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:id="@+id/cat_header">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="01"
                        android:layout_weight=".8"
                        android:id="@+id/category_count"
                        android:alpha=".05"
                        android:visibility="gone"
                        android:gravity="left"
                        android:textColor="#FFF"
                        android:layout_marginTop="-10dp"
                        android:layout_marginBottom="-30dp"
                        android:textSize="120sp"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Number Matching"
                            android:id="@+id/category_title"
                            android:textColor="#FFF"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textSize="22sp"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/quick_search_icon"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/search_white"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#0056d7"
                    android:id="@+id/quick_search"
                    android:layout_marginTop="0dp"
                    android:weightSum="2"
                    android:gravity="center"
                    android:layout_below="@id/cat_header">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp">
                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="10dp"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:inputType="text"
                        android:id="@+id/search_field"
                        android:background="@drawable/rounded_edit" />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="5dp"
                            android:layout_centerVertical="true"
                            android:id="@+id/quick_search_icon_two"
                            android:visibility="gone"
                            android:layout_toRightOf="@id/search_field"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/search_white"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick Search"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:textColor="#FFF"
                        android:layout_centerVertical="true"
                        android:textSize="18sp"/>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/icon_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFF"
                    android:paddingTop="10dp"
                    android:clipToPadding="false"
                    android:layout_marginTop="-5dp"
                    android:layout_below="@id/cat_header"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/criteria"
                    android:text="@string/criteria"
                    android:layout_below="@id/cat_header"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:visibility="gone"/>
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/list"
                    app:backgroundTint="@color/app_green"
                    android:transitionName="reveal"
                    android:visibility="gone"/>
            </RelativeLayout>
            </RelativeLayout>
    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>