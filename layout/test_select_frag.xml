<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/app"
        android:orientation="vertical"
        android:background="#132847"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:visibility="visible"
            android:orientation="vertical"
            android:id="@+id/select_main">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="2dp"
                android:id="@+id/game_header">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/tile_find_9"
                    android:id="@+id/game_tile"
                    android:scaleType="fitXY"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1"
                android:id="@+id/number_spinner"
                android:gravity="bottom"
                android:background="#132847">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="bottom"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="How Many Tickets?"
                            android:textColor="#FFF"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:id="@+id/how_many"
                            android:textSize="18sp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:id="@+id/stepper"
                            android:background="@drawable/rounded_layout_red">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/minus"
                                android:layout_weight=".5"
                                android:id="@+id/minus"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:background="#08111f"
                                android:layout_weight="2"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:id="@+id/new_counter"
                                android:textColor="#FFF"
                                android:text="4"
                                android:gravity="center"
                                android:textSize="24sp"/>
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/plus"
                                android:id="@+id/plus"
                                android:layout_weight=".5"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="16sp"
                                android:gravity="center"
                                android:textColor="#FFF"
                                android:id="@+id/cost_label"
                                android:textStyle="bold"
                                android:layout_centerInParent="true"
                                android:text="Total: $20"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/pick_layout"
                android:background="#132847"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/tomato"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:id="@+id/pick"
                    android:orientation="horizontal"
                    android:layout_gravity="center|bottom"
                    android:gravity="center"
                    android:background="@drawable/rounded_layout_green">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#FFF"
                        android:id="@+id/pick_text"
                        android:text="OK"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:id="@+id/saved"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_gravity="center|bottom"
                    android:gravity="center"
                    android:background="@drawable/rounded_layout_purp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#FFF"
                        android:id="@+id/saved_text"
                        android:text="Saved"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            android:orientation="vertical"
            android:background="#132847"
            android:id="@+id/select_second">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/ticket_info">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:id="@+id/game_name"
                        android:text="Game Ticket"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="20dp"
                        android:gravity="left"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ticket_number"
                        android:text="0"
                        android:textColor="#FFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="5dp"
                        android:layout_toRightOf="@id/game_name"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFF"
                            android:id="@+id/choose"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:text="Select"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00"
                            android:id="@+id/choice_count"
                            android:textColor="@color/new_green"
                            android:layout_marginLeft="5dp"
                            android:textSize="28sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFF"
                            android:id="@+id/choose_end"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:textSize="18sp"
                            android:layout_marginLeft="5dp"
                            android:text="XX beow"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:weightSum="2"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:gravity="left">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/quick_pick_one"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/rounded_layout_green">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Quick Pick"
                                android:textColor="#FFF"
                                android:id="@+id/pick_tag"
                                android:textSize="18sp"
                                android:gravity="center"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:id="@+id/quick_pick_all"
                            android:background="@drawable/rounded_layout_red">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Quick Pick All"
                                android:textColor="#FFF"
                                android:id="@+id/all_tag"
                                android:textSize="18sp"
                                android:gravity="center"/>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            <com.shoutz.toussaintpeterson.electronicpayslip.CustomExpandableListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/number_selection_grid"
                    android:numColumns="auto_fit"
                    android:layout_below="@id/ticket_info"
                    android:columnWidth="50dp"
                    android:layout_weight="1.4"
                    android:stretchMode="columnWidth"
                    android:visibility="gone"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="5dp"
                    android:padding="5dp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="100dp"/>
            <com.shoutz.toussaintpeterson.electronicpayslip.CustomExpandableListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/symbol_selection_grid"
                android:layout_below="@id/ticket_info"
                android:numColumns="auto_fit"
                android:columnWidth="50dp"
                android:stretchMode="columnWidth"
                android:visibility="gone"
                android:verticalSpacing="5dp"
                android:horizontalSpacing="5dp"
                android:padding="5dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="100dp"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/ticket_info"
                    android:id="@+id/phone_layout"
                    android:layout_marginBottom="110dp"
                    android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".3"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:weightSum="4"
                        android:id="@+id/pick4_numbers">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:background="@drawable/rounded_button_transparent"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:id="@+id/digit_one"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="40dp"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:background="@drawable/rounded_button_transparent"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:layout_height="40dp"
                                android:id="@+id/digit_two"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="40dp"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:background="@drawable/rounded_button_transparent"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:layout_height="40dp"
                                android:id="@+id/digit_three"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="40dp"
                                android:textSize="18sp"
                                android:layout_marginRight="10dp"
                                android:textStyle="bold"
                                android:background="@drawable/rounded_button_transparent"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:layout_height="40dp"
                                android:id="@+id/digit_four"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.8"
                        android:layout_marginTop="20dp"
                        android:layout_below="@id/pick4_numbers"
                        android:gravity="center_horizontal">
                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/rounded_button_transparent"
                            android:orientation="vertical"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/one">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:id="@+id/one_tag"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="5dp"
                                android:text="1"
                                android:textSize="30sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/rounded_button_transparent"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/two"
                            android:layout_toRightOf="@id/one">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:id="@+id/two_tag"
                                android:textColor="@color/white"
                                android:layout_marginTop="5dp"
                                android:text="2"
                                android:textSize="30sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="-5dp"
                                android:text="A B C"
                                android:textSize="13sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/rounded_button_transparent"
                            android:orientation="vertical"
                            android:id="@+id/three"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/two">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:id="@+id/three_tag"
                                android:textColor="@color/white"
                                android:layout_marginTop="5dp"
                                android:text="3"
                                android:textSize="30sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="-5dp"
                                android:text="D E F"
                                android:textSize="13sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/rounded_button_transparent"
                            android:orientation="vertical"
                            android:id="@+id/four"
                            android:layout_marginBottom="10dp"
                            android:layout_below="@id/one">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:id="@+id/four_tag"
                                android:layout_marginTop="5dp"
                                android:text="4"
                                android:textSize="30sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="-5dp"
                                android:text="G H I"
                                android:textSize="13sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/rounded_button_transparent"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/five"
                            android:layout_below="@id/one"
                            android:layout_toRightOf="@id/four">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:id="@+id/five_tag"
                                android:layout_marginTop="5dp"
                                android:text="5"
                                android:textSize="30sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="-5dp"
                                android:text="J K L"
                                android:textSize="13sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/rounded_button_transparent"
                            android:orientation="vertical"
                            android:id="@+id/six"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/two"
                            android:layout_below="@id/one">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:id="@+id/six_tag"
                                android:textColor="@color/white"
                                android:layout_marginTop="5dp"
                                android:text="6"
                                android:textSize="30sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="-5dp"
                                android:text="M N O"
                                android:textSize="13sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/rounded_button_transparent"
                            android:orientation="vertical"
                            android:id="@+id/seven"
                            android:layout_below="@id/four">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:id="@+id/seven_tag"
                                android:textColor="@color/white"
                                android:layout_marginTop="5dp"
                                android:text="7"
                                android:textSize="30sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="-5dp"
                                android:text="P Q R S"
                                android:textSize="13sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/rounded_button_transparent"
                            android:orientation="vertical"
                            android:id="@+id/eight"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="10dp"
                            android:layout_below="@id/four"
                            android:layout_toRightOf="@id/four">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:id="@+id/eight_tag"
                                android:layout_marginTop="5dp"
                                android:text="8"
                                android:textSize="30sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="-5dp"
                                android:text="T U V"
                                android:textSize="13sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/rounded_button_transparent"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/two"
                            android:id="@+id/nine"
                            android:layout_below="@id/four">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:id="@+id/nine_tag"
                                android:layout_marginTop="5dp"
                                android:text="9"
                                android:textSize="30sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="-5dp"
                                android:text="W X Y Z"
                                android:textSize="13sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/rounded_button_transparent"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_below="@id/eight"
                            android:id="@+id/zero"
                            android:layout_toRightOf="@id/four">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:id="@+id/zero_tag"
                                android:layout_marginTop="5dp"
                                android:text="0"
                                android:textSize="30sp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="-5dp"
                                android:text="+"
                                android:textSize="16sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/rounded_button_transparent"
                            android:orientation="vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_below="@id/eight"
                            android:id="@+id/back"
                            android:gravity="center"
                            android:layout_toLeftOf="@id/zero">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/back_image"
                                android:src="@drawable/backwhite" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
    </LinearLayout>