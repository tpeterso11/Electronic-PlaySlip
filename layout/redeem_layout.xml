<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/app"
        android:orientation="vertical"
        android:background="@color/app_purple"
        android:weightSum="3"
        android:elevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/game_tile"
                android:scaleType="fitXY"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_weight="2"
            android:layout_marginTop="2dp"
            android:background="#132847">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                android:layout_weight="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="2"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:textStyle="bold"
                                android:id="@+id/redeem"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="20dp"
                                android:textSize="20sp"
                                android:text="Redeem Winning Ticket"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:id="@+id/game_name"
                                android:layout_below="@id/redeem"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="20dp"
                                android:textSize="20sp"
                                android:text="PITBULL"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:textSize="20sp"
                                android:textColor="@color/new_green"
                                android:layout_below="@id/game_name"
                                android:id="@+id/date"
                                android:text="Purchased 1/1/1111"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#FFF"
                                android:id="@+id/prize_amount"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_below="@id/date"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:text="Prize Amount: $100"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="100dp"
                                android:id="@+id/view_ticket"
                                android:layout_below="@id/prize_amount"
                                android:layout_marginLeft="100dp"
                                android:background="@drawable/rounded_layout_red">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="View Ticket"
                                    android:id="@+id/view"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:textColor="#FFF"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginTop="10dp"
                                android:background="#FFF">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Present this screen to cashier"
                                    android:textColor="@color/tomato"
                                    android:layout_marginTop="5dp"
                                    android:id="@+id/present"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:gravity="center"/>
                                <ImageView
                                    android:layout_width="200dp"
                                    android:layout_height="100dp"
                                    android:id="@+id/barcode"
                                    android:layout_marginTop="10dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/blank_barcode"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000"
                                    android:textSize="18sp"
                                    android:gravity="center"
                                    android:layout_marginTop="-10dp"
                                    android:textStyle="bold"
                                    android:id="@+id/batch"
                                    android:layout_below="@id/barcode"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>