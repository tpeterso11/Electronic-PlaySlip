<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/app"
            android:orientation="vertical"
            android:background="@color/app_purple"
            android:weightSum="3"
            android:elevation="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/game_tile"
                    android:scaleType="fitXY"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:layout_weight="2"
                    android:layout_marginTop="2dp"
                    android:background="#132847">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight=".4"
                        android:gravity="top"
                        android:weightSum="3">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:weightSum="2"
                            android:id="@+id/favorite"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/btn_add_favorites"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:id="@+id/demo"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/btn_share"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/buy"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/btn_buy_now"/>
                    </LinearLayout>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:fillViewport="true"
                        android:layout_weight="1.6">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#FFF"
                                        android:textStyle="bold"
                                        android:id="@+id/game_name"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginLeft="20dp"
                                        android:textSize="20sp"
                                        android:text="PITBULL"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#FFF"
                                        android:text="Win up to $8000!"
                                        android:layout_marginLeft="20dp"
                                        android:layout_below="@id/game_name"
                                        android:id="@+id/win"
                                        android:textSize="20sp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:textSize="20sp"
                                        android:textColor="@color/new_green"
                                        android:layout_below="@id/win"
                                        android:id="@+id/cost"
                                        android:text="$$"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:textSize="20sp"
                                        android:textColor="@color/new_green"
                                        android:layout_below="@id/win"
                                        android:layout_toRightOf="@id/cost"
                                        android:id="@+id/per"
                                        android:text="per play"/>
                                </RelativeLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#FFF"
                                        android:id="@+id/description"
                                        android:layout_margin="20dp"
                                        android:text="The proceeds from the sale of this ticket supports the Texas Fund for Veterans Assistance!\n\nEnter Promotional 2nd Chance Drawings to win exciting prizes such as:"/>
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="How To Play"
                                            android:id="@+id/how"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginLeft="20dp"
                                            android:textColor="#FFF"/>
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="2dp"
                                            android:background="#FFF"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginRight="20dp"
                                            android:layout_below="@id/how"/>
                                    </RelativeLayout>
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="50dp">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:textColor="#FFF"
                                            android:id="@+id/instructions"
                                            android:textStyle="bold"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginTop="10dp"
                                            android:layout_marginBottom="10dp"
                                            android:layout_marginRight="20dp"
                                            android:text="An Ultimate Pit Experience!\nPITBULL Prize Packs!\nOver $7 million in prizes in this game!\nWin up to 12 times!\nPack Size: 125 tickets\nGuaranteed Total Prize Amount = $131 per pack"/>
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
        </LinearLayout>
</LinearLayout>