<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_blue">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/ticket_front3"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dynamic_back"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_360_ticket"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:id="@+id/flip"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/header"
                    android:layout_weight=".8"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.9"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".7"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:orientation="vertical"
                        android:layout_alignParentRight="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="10dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="20dp"
                                android:orientation="vertical"
                                android:weightSum="4">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_weight="1"
                                    android:weightSum="2">
                                    <RelativeLayout
                                        android:layout_width="75dp"
                                        android:layout_height="75dp"
                                        android:layout_marginRight="5dp"
                                        android:id="@+id/sec1"
                                        android:layout_weight="1">
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:id="@+id/sec1_image"
                                            android:visibility="invisible"
                                            android:src="@drawable/boc_closedbox_large"/>
                                        <LinearLayout
                                            android:layout_width="75dp"
                                            android:layout_height="75dp"
                                            android:orientation="vertical"
                                            android:layout_centerHorizontal="true"
                                            android:weightSum="3">
                                        </LinearLayout>
                                    </RelativeLayout>
                                    <RelativeLayout
                                        android:layout_width="75dp"
                                        android:layout_height="75dp"
                                        android:layout_marginRight="5dp"
                                        android:orientation="vertical"
                                        android:id="@+id/sec2"
                                        android:layout_weight="1">
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:id="@+id/sec2_image"
                                            android:visibility="invisible"
                                            android:src="@drawable/boc_closedbox_large"/>
                                        <LinearLayout
                                            android:layout_width="75dp"
                                            android:layout_height="75dp"
                                            android:orientation="vertical"
                                            android:layout_centerHorizontal="true"
                                            android:weightSum="3">
                                        </LinearLayout>
                                    </RelativeLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_weight="1"
                                    android:layout_marginTop="10dp"
                                    android:weightSum="2">
                                    <RelativeLayout
                                        android:layout_width="75dp"
                                        android:layout_height="75dp"
                                        android:layout_marginRight="5dp"
                                        android:orientation="vertical"
                                        android:id="@+id/sec3"
                                        android:layout_weight="1">
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:id="@+id/sec3_image"
                                            android:visibility="invisible"
                                            android:src="@drawable/boc_closedbox_large"/>
                                        <LinearLayout
                                            android:layout_width="75dp"
                                            android:layout_height="75dp"
                                            android:orientation="vertical"
                                            android:layout_centerHorizontal="true"
                                            android:weightSum="3">
                                        </LinearLayout>
                                    </RelativeLayout>
                                    <RelativeLayout
                                        android:layout_width="75dp"
                                        android:layout_height="75dp"
                                        android:layout_marginRight="5dp"
                                        android:orientation="vertical"
                                        android:id="@+id/sec4"
                                        android:layout_weight="1">
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:id="@+id/sec4_image"
                                            android:visibility="invisible"
                                            android:src="@drawable/boc_closedbox_large"/>
                                        <LinearLayout
                                            android:layout_width="75dp"
                                            android:layout_height="75dp"
                                            android:orientation="vertical"
                                            android:layout_centerHorizontal="true"
                                            android:weightSum="3">
                                        </LinearLayout>
                                    </RelativeLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_weight="1"
                                    android:layout_marginTop="10dp"
                                    android:weightSum="2">
                                    <RelativeLayout
                                        android:layout_width="75dp"
                                        android:layout_height="75dp"
                                        android:layout_marginRight="5dp"
                                        android:id="@+id/sec5"
                                        android:orientation="vertical"
                                        android:layout_weight="1">
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:id="@+id/sec5_image"
                                            android:visibility="invisible"
                                            android:src="@drawable/boc_closedbox_large"/>
                                            <LinearLayout
                                                android:layout_width="75dp"
                                                android:layout_height="75dp"
                                                android:orientation="vertical"
                                                android:layout_centerHorizontal="true"
                                                android:weightSum="3">
                                        </LinearLayout>
                                    </RelativeLayout>
                                    <RelativeLayout
                                        android:layout_width="75dp"
                                        android:layout_height="75dp"
                                        android:layout_marginRight="5dp"
                                        android:id="@+id/sec6"
                                        android:orientation="vertical"
                                        android:layout_weight="1">
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:id="@+id/sec6_image"
                                            android:visibility="invisible"
                                            android:src="@drawable/boc_closedbox_large"/>
                                        <LinearLayout
                                            android:layout_width="75dp"
                                            android:layout_height="75dp"
                                            android:orientation="vertical"
                                            android:layout_centerHorizontal="true"
                                            android:weightSum="3">
                                        </LinearLayout>
                                    </RelativeLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_weight="1"
                                    android:layout_marginTop="10dp"
                                    android:weightSum="2">
                                    <RelativeLayout
                                        android:layout_width="75dp"
                                        android:layout_height="75dp"
                                        android:layout_marginRight="5dp"
                                        android:orientation="vertical"
                                        android:id="@+id/sec7"
                                        android:layout_weight="1">
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:id="@+id/sec7_image"
                                            android:visibility="invisible"
                                            android:src="@drawable/boc_closedbox_large"/>
                                        <LinearLayout
                                            android:layout_width="75dp"
                                            android:layout_height="75dp"
                                            android:orientation="vertical"
                                            android:layout_centerHorizontal="true"
                                            android:weightSum="3">
                                        </LinearLayout>
                                    </RelativeLayout>
                                    <RelativeLayout
                                        android:layout_width="75dp"
                                        android:layout_height="75dp"
                                        android:layout_marginRight="5dp"
                                        android:orientation="vertical"
                                        android:weightSum="3"
                                        android:id="@+id/sec8"
                                        android:layout_weight="1">
                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:id="@+id/sec8_image"
                                            android:visibility="invisible"
                                            android:src="@drawable/boc_closedbox_large"/>
                                        <LinearLayout
                                            android:layout_width="75dp"
                                            android:layout_height="75dp"
                                            android:orientation="vertical"
                                            android:layout_centerHorizontal="true"
                                            android:weightSum="3">
                                        </LinearLayout>
                                    </RelativeLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".3"
                    android:id="@+id/bottom"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>