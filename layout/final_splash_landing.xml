<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/playport_splash_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".LandingActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:id="@+id/touch_info"
        android:visibility="gone"
        android:elevation="60dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/touchid"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loading"
        android:visibility="gone"
        android:background="#E6000000"
        android:elevation="60dp">
        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:visibility="gone"
            android:layout_centerInParent="true" />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:elevation="10dp"
            android:src="@drawable/playport_icon_final"
            android:id="@+id/loading_logo"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="Welcome to PlayPort"
            android:textSize="24sp"
            android:layout_centerInParent="true"
            android:id="@+id/welcome_text"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="User"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/welcome_text"
            android:layout_marginTop="10dp"
            android:id="@+id/user_text"
            android:visibility="invisible"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".6"
            android:id="@+id/splash_header">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:id="@+id/logo"
                android:transitionName="moveLogo"
                android:src="@drawable/pp_logo_tm"/>
        </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:layout_marginTop="30dp"
                android:id="@+id/welcome_view"
                android:visibility="visible"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="-0dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:weightSum="4">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Phone Number"
                        android:background="@drawable/custom_edit"
                        android:paddingLeft="10dp"
                        android:textColor="#FFF"
                        android:inputType="phone"
                        android:id="@+id/phone"
                        android:textColorHint="#E9FFFFFF"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:weightSum="1">
                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight=".7"
                            android:hint="Password"
                            android:textColor="#FFF"
                            android:paddingLeft="10dp"
                            android:id="@+id/pass"
                            android:inputType="textPassword"
                            android:background="@drawable/custom_edit"
                            android:textColorHint="#E9FFFFFF"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".3"
                            android:textColor="#21a5e3"
                            android:gravity="center"
                            android:padding="2dp"
                            android:id="@+id/fingerId"
                            android:text="Sign in with Fingerprint ID"/>
                    </LinearLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_button_green"
                        android:layout_marginTop="10dp"
                        android:id="@+id/login"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/white"
                        android:transitionName="move"
                        android:layout_weight="1"
                        android:text="Login / Join"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/rounded_button_red"
                        android:layout_marginTop="20dp"
                        android:id="@+id/guest"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:text="Play as Guest"/>

                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".9"
            android:id="@+id/social_view"
            android:visibility="visible"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:weightSum="3">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/facebook"
                    android:id="@+id/facebook"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/app_blue"
                    android:transitionName="move"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/twitter"
                    android:layout_marginTop="10dp"
                    android:id="@+id/twitter"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/app_blue"
                    android:transitionName="move"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/google"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:id="@+id/google"
                    android:layout_weight="1"
                    android:textColor="@color/app_blue"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
