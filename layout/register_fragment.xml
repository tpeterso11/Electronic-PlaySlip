<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/playport_splash_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loading"
        android:visibility="gone"
        android:background="#E6000000"
        android:elevation="60dp">
        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true" />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:elevation="10dp"
            android:src="@drawable/playport_icon"
            android:id="@+id/loading_logo"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="Welcome to PlayPort"
            android:textSize="24sp"
            android:layout_centerInParent="true"
            android:id="@+id/welcome_text"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="User"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/welcome_text"
            android:layout_marginTop="10dp"
            android:id="@+id/user_text"
            android:visibility="invisible"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="30dp"
        android:id="@+id/logo">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:transitionName="moveLogo"
            android:src="@drawable/playport_red_lg"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/logo">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:id="@+id/main"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/form"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:visibility="visible"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:id="@+id/enter_fname"
                        android:paddingLeft="10dp"
                        android:textColor="#FFF"
                        android:textColorHint="#E9FFFFFF"
                        android:imeOptions="actionDone"
                        android:background="@drawable/custom_edit"
                        android:layout_marginTop="10dp"
                        android:inputType="text"
                        android:hint="First Name"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:id="@+id/enter_lname"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#FFF"
                        android:textColorHint="#E9FFFFFF"
                        android:imeOptions="actionDone"
                        android:background="@drawable/custom_edit"
                        android:layout_marginTop="10dp"
                        android:inputType="text"
                        android:hint="Last Name"/>
                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/enter_email"
                    android:paddingLeft="10dp"
                    android:textColor="#FFF"
                    android:textColorHint="#E9FFFFFF"
                    android:imeOptions="actionDone"
                    android:background="@drawable/custom_edit"
                    android:layout_marginTop="10dp"
                    android:inputType="textEmailAddress"
                    android:hint="E-Mail Address"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:id="@+id/enter_dob"
                        android:textColor="#000"
                        android:textColorHint="#E9FFFFFF"
                        android:background="@drawable/button_trans_blue"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="16sp"
                        android:gravity="left|center_vertical"
                        android:hint="Date Of Birth"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="MM/DD/YY"
                        android:id="@+id/final_dob"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:textColor="#FFF"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:id="@+id/enter_city"
                        android:paddingLeft="10dp"
                        android:textColor="#FFF"
                        android:textColorHint="#E9FFFFFF"
                        android:imeOptions="actionDone"
                        android:background="@drawable/custom_edit"
                        android:layout_marginTop="10dp"
                        android:inputType="text"
                        android:hint="City"/>
                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/custom_edit"
                        android:drawSelectorOnTop="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <EditText
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:id="@+id/enter_zip"
                    android:paddingLeft="10dp"
                    android:textColor="#FFF"
                    android:textColorHint="#E9FFFFFF"
                    android:imeOptions="actionDone"
                    android:background="@drawable/custom_edit"
                    android:layout_marginTop="10dp"
                    android:inputType="number"
                    android:hint="Zip Code"/>
                </LinearLayout>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/form"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/buttons"
                    android:weightSum="2"
                    android:layout_marginTop="30dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Skip this step for now?"
                        android:id="@+id/skip"
                        android:textColor="#FFF"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/register_next"
                        android:background="@drawable/rounded_button_red"
                        android:text="Complete Profile"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textColor="#FFF"
                    android:id="@+id/already_register"
                    android:text="Already a member? "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/alt_green"
                    android:id="@+id/already_log"
                    android:layout_marginTop="0dp"
                    android:text="Log In."/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>