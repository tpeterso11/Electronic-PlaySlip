<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_purple">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You Have Zero Tickets"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:id="@+id/zero"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/app"
        android:orientation="vertical"
        android:background="#132847"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:id="@+id/ticket_filter_layout"
            android:layout_weight=".45"
            android:visibility="invisible"
            android:weightSum="2"
            android:gravity="center"
            android:background="#132847">
            <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/ticket_choice"
                android:layout_weight="2"
                android:layout_margin="10dp"
                android:background="#101c2e"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.7">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#132847"
                    android:weightSum="2"
                    android:focusableInTouchMode="true"
                    android:visibility="invisible"
                    android:id="@+id/winning_tag_layout"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textColor="#FFF"
                        android:layout_weight="1"
                        android:id="@+id/winning_tag"
                        android:text="My Winning Tickets"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@color/tomato"
                        android:layout_weight="1"
                        android:id="@+id/divider1"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>
            <com.shoutz.toussaintpeterson.electronicpayslip.CustomExpandableListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/winning_grid"
                android:background="#132847"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#132847"
                    android:visibility="gone"
                    android:id="@+id/ready_tag_layout"
                    android:gravity="center_vertical"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textColor="#FFF"
                        android:layout_weight="1"
                        android:id="@+id/ready_tag"
                        android:text="Ready To Play"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@color/tomato"
                        android:layout_weight="1"
                        android:id="@+id/divider2"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>
                <com.shoutz.toussaintpeterson.electronicpayslip.CustomExpandableListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/grid"
                    android:background="#132847"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#132847"
                    android:weightSum="2"
                    android:focusableInTouchMode="true"
                    android:visibility="gone"
                    android:id="@+id/redeemed_tag_layout"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textColor="#FFF"
                        android:layout_weight="1"
                        android:id="@+id/redeemed_tag"
                        android:text="Redeemed Tickets"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@color/tomato"
                        android:layout_weight="1"
                        android:id="@+id/divider0"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>
                <com.shoutz.toussaintpeterson.electronicpayslip.CustomExpandableListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/redeemed_grid"
                    android:background="#132847"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#132847"
                    android:visibility="invisible"
                    android:id="@+id/history_tag_layout"
                    android:gravity="center_vertical"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:textColor="#FFF"
                        android:id="@+id/history_tag"
                        android:text="My History"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:background="@color/tomato"
                        android:id="@+id/divider3"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>
                <com.shoutz.toussaintpeterson.electronicpayslip.CustomExpandableListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/history_grid"
                    android:background="#132847"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>