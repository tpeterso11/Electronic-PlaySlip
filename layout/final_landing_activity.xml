<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/app_bar_layout"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <android.support.v7.widget.Toolbar
                android:id="@+id/app_bar"
                android:background="#132847"
                android:elevation="30dp"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways">
                <RelativeLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:id="@+id/notifications">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/new_notification"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/pplogo_sm"/>
                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|right">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="13dp"
                    android:visibility="visible"
                    android:id="@+id/home_search"
                    android:src="@drawable/search_white"/>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
                <com.shoutz.toussaintpeterson.electronicpayslip.CustomScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/scrollView"
                    android:fillViewport="true"
                    android:background="@color/new_blue"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/new_blue"
                        android:id="@+id/frame"/>
                </com.shoutz.toussaintpeterson.electronicpayslip.CustomScrollView>
            </LinearLayout>
        </android.support.design.widget.AppBarLayout>
        <LinearLayout
            android:id="@+id/left_drawer"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#111"
            >
            <include layout="@layout/drawer_menu" />
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ticket_filter_layout"
        android:layout_weight=".45"
        android:visibility="gone"
        android:layout_marginTop="?attr/actionBarSize"
        android:weightSum="2"
        android:gravity="center"
        android:background="@color/new_blue">
        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/ticket_choice"
            android:layout_weight="2"
            android:layout_margin="10dp"
            android:background="#101c2e"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight=".5"
        android:id="@+id/temp_layout"
        android:background="@color/new_blue"
        android:layout_marginTop="?attr/actionBarSize"
        android:visibility="gone"
        android:weightSum="2">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/nearest"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_layout_gold">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:id="@+id/nearest_button"
                android:text="Play More Games"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/purchase"
            android:background="@drawable/rounded_layout_green">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:text="Add All"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/purchase_button"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loading"
        android:visibility="gone"
        android:background="#E6000000"
        android:elevation="60dp">
        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:visibility="gone"
            android:layout_centerInParent="true" />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:elevation="10dp"
            android:visibility="gone"
            android:src="@drawable/playport_icon_final"
            android:id="@+id/loading_logo"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="Welcome to PlayPort"
            android:textSize="24sp"
            android:layout_centerInParent="true"
            android:id="@+id/welcome_text"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="User"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/welcome_text"
            android:layout_marginTop="10dp"
            android:id="@+id/user_text"
            android:visibility="invisible"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/number_select"
        android:visibility="invisible"
        android:background="#132847"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:id="@+id/save_layout"
            android:visibility="invisible"
            android:orientation="horizontal"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:layout_weight=".3">
                <CheckBox
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/save_check"/>
            </RelativeLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:gravity="left"
                android:textColor="#FFF"
                android:id="@+id/save_text"
                android:textSize="16sp"
                android:text="Save these letters for future plays?"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/saved_button"
            android:visibility="invisible"
            android:background="@drawable/rounded_layout_purp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Use Saved Letters"
                android:textColor="#FFF"
                android:id="@+id/saved_tag"
                android:textSize="18sp"
                android:gravity="center"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/submit"
            android:background="@drawable/rounded_layout_gold">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Submit"
                android:textColor="#FFF"
                android:id="@+id/submit_tag"
                android:textSize="18sp"
                android:gravity="center"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/retailer_select_layout"
        android:visibility="gone"
        android:background="#132847"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:background="#FFF"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/retailer_one_layout"
                    android:background="#132847"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:id="@+id/retailer_one"
                        android:src="@drawable/ho_chunk_gaming_white"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/retailer_one"
                        android:text="Ho-Chunk Gaming"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#132847"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/retailer_two_layout">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/retailer_two"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:src="@drawable/ready_to_view"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/retailer_two"
                        android:text="Ready to Play"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#132847"
                    android:layout_marginRight="2dp"
                    android:id="@+id/retailer_three_layout">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/retailer_three"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:src="@drawable/pending_white"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/retailer_three"
                        android:text="Pending Tickets"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#132847"
                    android:id="@+id/retailer_four_layout">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:visibility="gone"
                        android:id="@+id/retailer_four"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_timer_white_24dp"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/retailer_four"
                        android:text="My History"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ticket_filter"
        android:visibility="gone"
        android:background="#132847">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:background="#FFF"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/all_ticket_layout"
                    android:background="#132847"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:id="@+id/all_tickets"
                        android:src="@drawable/my_tickets_icon"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/all_tickets"
                        android:text="All Tickets"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#132847"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/ready_layout">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/ready_tickets"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ready_to_view"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ready_tickets"
                        android:text="Ready to Play"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#132847"
                    android:layout_marginRight="2dp"
                    android:id="@+id/pending_layout">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/pending_tickets"
                        android:layout_centerInParent="true"
                        android:src="@drawable/pending_white"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pending_tickets"
                        android:text="Pending Tickets"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#132847"
                    android:id="@+id/history_layout">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="20dp"
                        android:id="@+id/history_tickets"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_timer_white_24dp"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/history_tickets"
                        android:text="My History"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>